{
  "name": "webchat-http-source",
  "config": {
    "connector.class": "com.github.castorm.kafka.connect.http.HttpSourceConnector",
    "tasks.max": "1",
    "http.offset.initial": "cursor=0",
    "http.request.url": "http://host.docker.internal:5001/messages",
    "http.request.params": "after=${offset.cursor}",
    "http.timer.interval.millis": "10000",
    "http.timer.catchup.interval.millis": "1000",
    "http.response.list.pointer": "/messages",
    "http.response.record.offset.pointer": "cursor=/id, timestamp=/timestamp",
    "http.response.record.value.pointer": "/",
    "http.response.record.timestamp.pointer": "/timestamp",
    "kafka.topic": "features.raw.webchat",
    "transforms": "MaskPII",
    "transforms.MaskPII.type": "org.apache.kafka.connect.transforms.MaskField$Value",
    "transforms.MaskPII.fields": "customer.email,customer.phone",
    "transforms.MaskPII.replacement": "***REDACTED***"
  }
}
